<div class="product col-sm-5 col-md-4 col-lg-3 col-xl-2 <%= 'out-of-stock' unless product.in_stock? %>">
  <div class="image">
    <%= image_tag product.image_url %>
  </div>

  <div class="content">
    <div class="name">
      <%= product.name %>
    </div>

    <div class="producer">
      <%= product.producer %>
    </div>

    <% unless product.in_stock? %>
      <div class="status">
        (Out of Stock)
      </div>
    <% end %>
    
  </div>
</div>